{
    "version": 2,
    "framework": null,
    "buildCommand": "pwd && ls -la && npm ci && npm run build && ls -la api/public/build/assets/ && cd api && pwd && composer install --no-dev --optimize-autoloader",
    "installCommand": "npm ci",
    "functions": {
        "api/public/index.php": { "runtime": "vercel-php@0.6.0" }
    },
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/api/public/build/$1"
        },
        {
            "src": "/(.*\\.(?:css|js|map|json|xml|ico|svg|png|jpg|jpeg|gif|webp|woff|woff2|ttf|eot))$",
            "dest": "/api/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/public/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://yourprojectdomain.com",
        "APP_KEY": "base64:YOUR_GENERATED_APP_KEY_HERE",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",

        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    }
}